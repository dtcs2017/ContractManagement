<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fxd.ssm.dao.UserMapper" >
   <resultMap id="BaseResultMap" type="com.fxd.ssm.entity.User" >
    <id column="user_id" property="id" jdbcType="BIGINT" />
    <id column="role_id" property="id" jdbcType="BIGINT" />
    <result column="user_name" property="userName" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="real_name" property="realName" jdbcType="VARCHAR" />
    <result column="phone_number" property="phoneNum" jdbcType="DECIMAL"/>
    <result column="email" property="email" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
    <result column="user_state" property="userState" jdbcType="CHAR" />
  </resultMap>

	<!-- 获取用户持久化对象（接口） -->
	<select id = "selectUserByName"  resultMap="BaseResultMap">
		select * from t_user u
		where u.user_name = #{username,jdbcType=VARCHAR}
	</select>
</mapper>